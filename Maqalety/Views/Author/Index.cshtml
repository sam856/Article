@model IEnumerable<MaqaletyCore.Author>

@{
    ViewData["Title"] = "البيانات";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:Cairo">بيانات الناشرون</h1>
<form method="get" asp-action="Search">
    <input type="search" name="SearchItem" class="search-field" />
    <input type="submit" value="بحث" class="btn-primary" />
</form>




<table class="table table-striped hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PictureImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaceBook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instgram)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Twiter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                    <img src="~/img/@item.PictureImageUrl" class="rounded-circle" width="50" height="59" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaceBook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instgram)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Twiter)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">تعديل</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>




<div class="pagination-controls">
    @if (ViewBag.HasPrevious)
    {
        <a class="btn-primary" href="@Url.Action("Index", new { page = ViewBag.Page, isPrevious = true })">الصفحة السابقة</a>
    }

    @if (ViewBag.HasNext)
    {
        <a class="btn-primary" href="@Url.Action("Index", new { page = ViewBag.Page + 1 })">الصفحة التالية</a>
    }
</div>
